{
   "name": "basiccap",
   "version": "1.0.0",
   "description": "A simple CAP project.",
   "repository": "<Add your repository here>",
   "license": "UNLICENSED",
   "private": true,
   "engines": {
      "node": "^16"
   },
   "dependencies": {
      "@sap/cds": "^6.0.4",
      "@sap/xssec": "^3.2.13",
      "express": "^4",
      "hdb": "^0.19.4",
      "passport": "^0.6.0"
   },
   "devDependencies": {
      "sqlite3": "^5.0.2"
   },
   "scripts": {
      "start": "cds run"
   },
   "eslintConfig": {
      "extends": "eslint:recommended",
      "env": {
         "es2020": true,
         "node": true,
         "jest": true,
         "mocha": true
      },
      "globals": {
         "SELECT": true,
         "INSERT": true,
         "UPDATE": true,
         "DELETE": true,
         "CREATE": true,
         "DROP": true,
         "CDL": true,
         "CQL": true,
         "CXL": true,
         "cds": true
      },
      "rules": {
         "no-console": "off",
         "require-atomic-updates": "off"
      }
   },
   "cds": {
      "requires": {
         "db": {
            "kind": "sql"
         },
         "xsuaa": {
            "kind": "xsuaa"
         }
      },
      "hana": {
         "deploy-format": "hdbtable"
      }
   }
}
